<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ly_5"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/newsHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_8"
        android:fontFamily="@font/basic_font"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_22"
        android:textStyle="bold"
        tools:text="News HeadLines" />

    <TextView
        android:id="@+id/newsAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:fontFamily="@font/basic_font"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_18"
        tools:text="news author" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newsDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_weight="1"
            android:fontFamily="@font/basic_font"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/txt_18"
            tools:text="News Date" />

        <TextView
            android:id="@+id/newsType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:fontFamily="@font/basic_font"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_18"
            tools:text="News Source" />

    </LinearLayout>

</LinearLayout>